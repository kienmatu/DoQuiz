@model IEnumerable<TracNghiem.Models.ActiveTest>
@{
    ViewBag.Title = "Bài thi đang hoạt động";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Bài thi đang chạy</h2>
<div style="margin-top:10px;"></div>
@*<div class="row">
    <button onclick="AddQuizTest" class="btn btn info">Thêm phòng thi</button>
