@model TracNghiem.ViewModel.LoginViewModel
@{
    ViewBag.Title = "Đăng Nhập";
}

<link rel="stylesheet" href="~/Content/login.css" />
<div class="site">
    <div class="content">
        @*<div class="language">
                <div class="language-logo"> </div>
                <div class="language-text">
                    <p>Deutsch</p>
                </div>
            </div>*@
        @*<div class="header">
                <div class="header-logo"></div>
                <div class="header-text">
                    <h1>Hive</h1>
                </div>
            </div>*@
        <div class="center">
            <div class="login">
                <h2 style="font-family:serif">ĐĂNG NHẬP</h2>
                <div class="text-center text-danger">@ViewBag.Error</div>
                <form class="form-signin" method="post">
                    @Html.TextBoxFor(m => m.Username, new { @placeholder = "UserName" })
                    @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                    @Html.PasswordFor(m => m.Password, new { @placeholder = "Password" })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    <button type="submit">Login</button>
                </form>
                <div class="seperator"></div>
                <div class="create-acc">
                    <p>Chưa có tài khoản?</p><a href="/Auth/Register">Đăng ký</a>
                </div>
            </div>
        </div>
        <div class="footer">
            <p>© 2019 Ngọc Nguyễn </p>
        </div>
    </div>
</div>


