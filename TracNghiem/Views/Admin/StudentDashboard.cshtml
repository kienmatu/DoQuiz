@model IEnumerable<TracNghiem.ViewModel.QuizResultViewModel>
@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="row mt-3">
    <div class="col-md-3">
        @foreach (var item in Model)
        {
            <div class="card radius transparent position-fixed mr-3">
                <div class="card-header" style="background-color: rgba(0,0,0,.03);">
                    <h5 class="card-title">@item.Name</h5>
                </div>
                <div class="card-body">
                    <p>Môn: @item.SubjectName</p>
                    <p>Điểm:  @String.Format("{0:0.00}", item.Score)</p>
                    <p>Tình trạng:
                    @{var stt = item.Status == TracNghiem.Models.DoQuizStatus.Finished ? "<span>Đã hoàn thành</span>" : "<span>Gián đoạn</span>"; }
                    @Html.Raw(stt)
                    </p>
                </div>
            </div>
        }
    </div>
</div>