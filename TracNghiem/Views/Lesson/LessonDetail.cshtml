@model TracNghiem.ViewModel.LessonViewModel
@{
    ViewBag.Title = "LessonDetail";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

    <div style="margin-top:10px;margin-left:12px">
        <div class="row mb-3">
            <div class="col-md-5">
                <div class="px-lg-0">
                    <h3 class="text-primary">Bài @Model.Id. @Model.Name</h3>
                    <p>
                        @Model.Description
                    </p>
                    <a href="@Model.File" class="btn btn-primary" target="_blank">Tài liệu</a>
                </div>
            </div>
            <div class="col-md-7">
                <div>
                    <iframe frameborder="0" allowfullscreen="1" style="width:600px;height:360px" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" title="YouTube video player" src="@Model.YoutubeLink" id="widget2"></iframe>
                </div>
            </div>
        </div>
        <div class="px-3 px-lg-0">
            <a href="/DoQuiz/OpenRoom" class="btn btn-primary">Bài tập</a>
        </div>
        <div class="text-right px-3 px-lg-0" style="margin-right:10%">
            <a href="/Lesson/AllMyLesson" class="btn btn-primary">Bài tiếp theo <i class="fa fa-chevron-right" aria-hidden="true"></i></a>
        </div>
    </div>
